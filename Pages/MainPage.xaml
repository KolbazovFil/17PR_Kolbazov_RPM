<Page x:Class="_17PR_Kolbazov_RPM.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_17PR_Kolbazov_RPM.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage" Background="#E1F5FE">
    <Grid>
<ListView Name="TransactionList" Height="300" HorizontalAlignment="Center" Width="780" VerticalAlignment="Top" Margin="0,10,0,0">
    <ListView.View>
        <GridView>
            <GridViewColumn Header="Тип" Width="180" DisplayMemberBinding="{Binding Type}"/>
            <GridViewColumn Header="Сумма" Width="200" DisplayMemberBinding="{Binding Amount}"/>
            <GridViewColumn Header="Дата" Width="200" DisplayMemberBinding="{Binding Date}"/>
            <GridViewColumn Header="Категория" Width="200" DisplayMemberBinding="{Binding Category}"/>
        </GridView>
    </ListView.View>
</ListView>
    </Grid>
</Page>
